<script>
    function irAPag(limit) {
        const pagDeseada = document.querySelector('input').value || 1;
        window.location = `/products/?limit=${limit}&page=${pagDeseada}`;
    }

    function agregarAlCarrito(title) {
        alert(`Producto ${title} agregado al carrito`);
    }
</script>


